<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="2dp"
                android:color="#7000" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="-1dp"/>
            <corners
                android:bottomLeftRadius="@dimen/radius_movie_item"
                android:bottomRightRadius="@dimen/radius_movie_item"
                />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/radius_movie_item"
                android:bottomRightRadius="@dimen/radius_movie_item"/>
            <solid android:color="@color/colorLightGrey"/>
        </shape>
    </item>

</layer-list>